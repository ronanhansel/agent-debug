# Direct Azure/TRAPI access (bypasses LiteLLM proxy)
USE_DIRECT_AZURE=true
TRAPI_ENDPOINT=
TRAPI_API_VERSION=
TRAPI_SCOPE=

# Placeholder key (not used with Azure, but required by some libraries)
OPENAI_API_KEY=
# Proxy URLs disabled for direct Azure access
#OPENAI_BASE_URL="http://host.docker.internal:4000/v1"
#OPENAI_API_BASE="http://host.docker.internal:4000/v1"
HAL_AUTOFIX_MODEL="azure/o3-mini"
LOG_LEVEL=DEBUG
HAL_DEBUGGER_LOG_LEVEL=DEBUG
WANDB_API_KEY=
SERPAPI_API_KEY=
HAL_DOCKER_NETWORK_MODE=host
HAL_DOCKER_PREFLIGHT_NETWORK=1
# LiteLLM retry settings for handling proxy restarts
# With exponential backoff capped at 10s per retry:
# ~35 retries = ~5 minutes of total retry time
LITELLM_NUM_RETRIES=35
LITELLM_REQUEST_TIMEOUT=600